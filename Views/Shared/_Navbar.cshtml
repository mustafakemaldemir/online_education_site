@{

    var isLoggedIn = false;
    var userType = UserTypes.Student;
    var claim = User.Claims.FirstOrDefault();

    if (claim != null)
    {
        var claimModel = JsonSerializer.Deserialize<ClaimModel>(claim.Value);
        isLoggedIn = true;
        userType = claimModel.UserType;
    }

}


@if (isLoggedIn)

{
    if (userType == UserTypes.Student)
    {
        <!-- Left navbar links -->
        <ul class="navbar-nav">

            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>

            <li class="nav-item d-sm-inline-block">
                <a href="@Url.Action("After_Login_Student_Index", "AfterLogin_Student")" class="nav-link">Student's Home Page</a>
            </li>

            <li class="nav-item d-sm-inline-block">
                <a href="#" class="nav-link">Contact</a>
            </li>

        </ul>

        <ul class="navbar-nav ml-auto">

            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
            </li>

        </ul>

    }

    else
    {
        <!-- Left navbar links -->

        <ul class="navbar-nav">

            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>

            <li class="nav-item d-sm-inline-block">
                <a href="@Url.Action("After_Login_Teacher_Index", "AfterLogin_Teacher")" class="nav-link">Instructor's Home Page</a>
            </li>

            <li class="nav-item d-sm-inline-block">
                <a href="#" class="nav-link">Contact</a>
            </li>

        </ul>

        <!-- Right navbar links -->

        <ul class="navbar-nav ml-auto">

            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
            </li>

        </ul>

    }    
}