@{

    var isLoggedIn = false;
    var userType = UserTypes.Student;
    var claim = User.Claims.FirstOrDefault();

    if (claim != null)
    {
        var claimModel = JsonSerializer.Deserialize<ClaimModel>(claim.Value);
        isLoggedIn = true;
        userType = claimModel.UserType;
    }

}

<ul class="navbar-nav flex-grow-1">

    @if (isLoggedIn)

    {
        if (userType == UserTypes.Student)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Lessons" asp-action="Lessons_Student"><b>Favourite Lessons</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Lessons" asp-action="All_Lessons"><b>All Lessons</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="AfterLogin_Student" asp-action="Account_Settings_Student"><b>Account Settings</b></a>
            </li>

        }

        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="  " asp-controller="Lessons" asp-action="Lessons_Teacher"><b>Instructor's Lesson</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Lessons" asp-action="Add_Document"><b>Add Document</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Lessons" asp-action="Uploaded_documents_byTeacher"><b>Uploaded Documents</b></a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="AfterLogin_Teacher" asp-action="Account_Settings_Teacher"><b>Account Settings</b></a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout"><b>Logout</b></a>
        </li>
    }

    else

    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LOGIN"><b>Login</b></a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="REGISTER"><b>Register</b></a>
        </li>
    }

</ul>