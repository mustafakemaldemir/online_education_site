@model List<online_education_site.EntityFramework.Models.Document>

@{
    var _9Lessons = Model.Where(l => l.DocumentClassId == 9);
    var _10Lessons = Model.Where(l => l.DocumentClassId == 10);
    var _11Lessons = Model.Where(l => l.DocumentClassId == 11);
    var _12Lessons = Model.Where(l => l.DocumentClassId == 12);
}

@if (_9Lessons.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">9.Sınıf Dersine Yüklenmiş Dosyalarınız</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var document in _9Lessons)
            {
                var folderName = document.DocumentClassId + " - " + document.DocumentLesson.LessonName;
                <tr>
                    <td>
                        <a href="@Url.Action("DownloadFile", "Lessons", new {fileName = document.DocumentName, folderName = folderName, prefix = document.DocumentPrefix})">
                            @document.DocumentRealname
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete_File", "Lessons", new {id=document.DocumentId, fileName = document.DocumentName, folderName = folderName, prefix = document.DocumentPrefix})"
                           class="btn btn-outline-danger">
                            Dosyayı Sil
                        </a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
}
