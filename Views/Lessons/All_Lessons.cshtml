@model List<online_education_site.EntityFramework.Models.Lesson>

@{
    var _9Lessons = Model.Where(l => l.LessonClassId == 9);
    var _10Lessons = Model.Where(l => l.LessonClassId == 10);
    var _11Lessons = Model.Where(l => l.LessonClassId == 11);
    var _12Lessons = Model.Where(l => l.LessonClassId == 12);
}

<div class="row">
    <div class="col-2 mx-2">
        <h3 class="fw-bold mb-2" style="background-color:dodgerblue">9. Sınıf dersleri</h3>
        <ul class="list-group">
            @foreach (var lesson in _9Lessons)
            {
                <li class="list-group-item">
                    <a href="@Url.Action("Lesson", "Lessons",new {id = lesson.LessonId})">
                        @lesson.LessonClassId @lesson.LessonName
                    </a>
                </li>
            }
        </ul>
    </div>
